{
	"name": "bravabook",
	"version": "1.0.0",
	"description": "Apartment Booking System",
	"type": "module",
	"private": true,
	"scripts": {
		"start": "node server/server.js",
		"dev:client": "vite",
		"build": "vite build",
		"preview": "vite preview",
		"dev:server": "nodemon --config nodemon.json server/server.js",
		"dev": "concurrently \"npm run dev:server\" \"npm run dev:client\"",
		"docker:up": "docker compose up --build -d",
		"docker:down": "docker compose down",
		"db:seed": "node server/seed.js"
	},
	"dependencies": {
		"@pinia/nuxt": "^0.11.2",
		"axios": "^1.11.0",
		"cors": "^2.8.5",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"mongoose": "^8.0.0",
		"pinia": "^3.0.3",
		"vue": "^3.4.21",
		"vue-datepicker-next": "^1.0.3",
		"vue-router": "^4.3.0"
	},
	"devDependencies": {
		"@tailwindcss/vite": "^4.0.0",
		"@types/express": "^4.17.17",
		"@types/node": "^20.0.0",
		"@vitejs/plugin-vue": "^5.0.4",
		"concurrently": "^8.0.1",
		"nodemon": "^3.0.1",
		"sass": "^1.72.0",
		"tailwindcss": "^4.0.0",
		"typescript": "~5.7.2",
		"vite": "^5.2.0",
		"vite-plugin-vue-devtools": "^7.7.0"
	},
